<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="112dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/shape"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        >
    <ImageView
        android:id="@+id/listitemImg"
        android:layout_width="126dp"
        android:layout_height="84dp"
        tools:src="@mipmap/revolt"
        />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/listitemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Revolt by Nike"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/textColor"
            android:layout_marginBottom="7dp"
            />
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/inStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10 in stock"
                android:textSize="12sp"
                android:textColor="@color/textColor_dull"
                android:layout_marginBottom="7dp"
                />
            <TextView
                android:id="@+id/inSold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text=" - 10 sold"
                android:textSize="12sp"
                android:textColor="@color/textColor_alert"
                android:layout_marginBottom="7dp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/listitemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$400.00"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            />
    </LinearLayout>
</LinearLayout>